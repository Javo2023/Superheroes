<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.DetailFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="601dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/origen_detail"
                        android:layout_width="201dp"
                        android:layout_height="23dp"
                        android:gravity="center"
                        android:text="TextView"
                        android:textColor="@color/primary_text"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="@+id/nombre_detail"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toStartOf="@+id/nombre_detail"
                        app:layout_constraintTop_toBottomOf="@+id/nombre_detail" />

                    <TextView
                        android:id="@+id/poder_detail"
                        android:layout_width="201dp"
                        android:layout_height="23dp"
                        android:gravity="center"
                        android:text="TextView"
                        android:textColor="@color/primary_text"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="@+id/origen_detail"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/origen_detail"
                        app:layout_constraintTop_toBottomOf="@+id/origen_detail" />

                    <TextView
                        android:id="@+id/anio_creacion_Detail"
                        android:layout_width="201dp"
                        android:layout_height="23dp"
                        android:gravity="center"
                        android:text="TextView"
                        android:textColor="@color/primary_text"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="@+id/poder_detail"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/poder_detail"
                        app:layout_constraintTop_toBottomOf="@+id/poder_detail" />

                    <TextView
                        android:id="@+id/color"
                        android:layout_width="201dp"
                        android:layout_height="23dp"
                        android:gravity="center"
                        android:text="TextView"
                        android:textColor="@color/primary_text"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="@+id/anio_creacion_Detail"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/anio_creacion_Detail"
                        app:layout_constraintTop_toBottomOf="@+id/anio_creacion_Detail" />

                    <TextView
                        android:id="@+id/traduccion"
                        android:layout_width="201dp"
                        android:layout_height="23dp"
                        android:gravity="center"
                        android:text="TextView"
                        android:textColor="@color/primary_text"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="@+id/color"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/color"
                        app:layout_constraintTop_toBottomOf="@+id/color" />

                    <ImageView
                        android:id="@+id/image_detail"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_marginTop="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:src="@tools:sample/avatars" />

                    <TextView
                        android:id="@+id/id_detail"
                        android:layout_width="201dp"
                        android:layout_height="23dp"
                        android:layout_marginTop="24dp"
                        android:gravity="center"
                        android:text="TextView"
                        android:textColor="@color/primary_text"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="@+id/image_detail"
                        app:layout_constraintStart_toStartOf="@+id/image_detail"
                        app:layout_constraintTop_toBottomOf="@+id/image_detail" />

                    <TextView
                        android:id="@+id/nombre_detail"
                        android:layout_width="201dp"
                        android:layout_height="23dp"
                        android:gravity="center"
                        android:text="TextView"
                        android:textColor="@color/primary_text"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="@+id/id_detail"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toStartOf="@+id/id_detail"
                        app:layout_constraintTop_toBottomOf="@+id/id_detail" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>